{
  "name": "hapi-mock",
  "version": "1.0.0-beta.5",
  "description": "A simple HAPI plug-in for mocking endpoints",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --ignore-path ./.eslintignore",
    "test": "NODE_ENV=test nyc --reporter=lcov --reporter=text-summary mocha --exit --recursive test",
    "coveralls": "nyc report --reporter=lcovonly && cat ./coverage/lcov.info | coveralls",
    "preversion": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankthelen/hapi-mock.git"
  },
  "keywords": [
    "hapi",
    "mock"
  ],
  "author": "Frank Thelen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frankthelen/hapi-mock/issues"
  },
  "homepage": "https://github.com/frankthelen/hapi-mock#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "@hapi/hapi": ">=19.x.x"
  },
  "devDependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/hapi": "^19.0.5",
    "@hapi/joi": "^17.1.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-should-promised": "^2.0.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.4.0"
  },
